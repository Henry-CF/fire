@import 'nib'
@import '_vars'

html, body
  height 100%
  width 100%

[class^='icon-']
  background-repeat no-repeat

.cards-container
  .card
    margin 5px 0px
  form
    margin 0px
    padding 0px
  
  .card-collection-actions
    padding 5px 0px
    margin-top 5px
    a
      padding 5px 10px

      &:hover
        background #e5e5e5
    i
      margin-top 2px
      margin-right 4px


body
  font-family font

*.hidden
  display none


.inactive
  opacity 0.3


.fallback
  border 1px solid #e5e5e5
  background #f5f5f5
  padding 10px
  text-align center
  margin 10px 0px
  display none

.clear
  clear both

a
  &:hover
    text-decoration none
  &:focus
    outline none

.container-fluid
  margin 0
  margin-left 160px
  max-width 960px


.application

  > section
    float left
    margin-top 40px
    width 650px

  &.full-width
    width 100%


.page-header
  border 0px
  padding-bottom 0px
  margin 25px 0px 0px 0px
  height 40px
  line-height 40px
  border-bottom 1px solid #ccc
  position relative
  clear both


  h1
    color #5C6166
    font-family font
    font-size 18px
    margin-left 4px
    padding-left 0px

  h5
    margin-top 10px
    color #5C6166
    font-family font
    font-size 12px
    margin-left 4px

.content
  clear both

.row
  padding 5px
  margin 5px 0px
  background #f5f5f5
  border 1px solid #e5e5e5

.content
  #cards-container > div
    &:nth-child(odd)
      background #f5f5f5
    
    &:nth-child(even)
      background #fff

.index-row
  padding 0px
  margin 8px 0px 0px 0px
  margin 0px
  border-bottom 1px solid #e5e5e5
  height 30px
  clear both
  position relative



  .span2
    width 200px
    line-height 28px
    display inline-block
    font-size 12px
    height 30px
    padding 0px 5px
    text-transform capitalize

    &.missing
      background rgba(darken(red,10),.60)
      color #fff
      height 30px

  .span75
    width 75px
    line-height 28px
    display inline-block
    font-size 12px
    height 30px
    padding 0px 5px
    text-transform capitalize


  .row-actions
    position relative
    display inline-block
    float right
    
    a
      padding 0px 10px
      display block
      float left
      margin 0px
      line-height 30px
      height 30px

      &:hover
        background #e5e5e5

      &.destroy
        background rgba(#ff3d3d,.15)
        height 31px
        &:hover
          background rgba(#ff3d3d,.85)

  :first-child.span2
    margin-left 0px
    font-weight bold

.clearfix
  margin-top 10px

label
  font-weight bold
  padding 5px 0px
  curvy-font 12px
  color darken(#c0c0c0,35)
  .info
    margin-left 5px
    font-size 9px
    font-family arial

textarea
  border-radius 0px

input
  margin-bottom 0px
  border-radius 0px
  margin-right 10px

input, textarea
  &:focus
    border 1px solid rgba(37, 77, 165, .95)


[class*="span"]
  margin-left 0px
  color darken(#c0c0c0,30)


.span10
  margin-left 30px

#sortable-data-set
  .row
    cursor move

.loading
  background url(../images/horizontal-loading.gif) no-repeat 50% 50%
  margin 0 auto
  width 80px
  height 10px
  padding 5px 10px
  margin-top 10px
  margin-bottom 10px

.overlay
  position:fixed
  height:100%
  width:100%
  background rgba(#f5f5f5,.70)
  bottom: 0;
  left: 0;
  overflow: auto;
  padding: 20px;
  padding-bottom: 130px;
  right: 0;
  top: 0px;
  z-index: 100;
  transition all 0.3s