@import 'nib'
@import '_vars'

section.dynamo-menu
	z-index: $maxZ
	background rgba(#fefefe)
	border 1px solid #c1c1c1
	width 400px
	position fixed
	top 20px
	left 50%
	margin 0px 5px 5px -200px
	box-shadow 10px 10px 40px rgba(#000,.20), -10px -10px 40px rgba(#000,.20)

	h3.fallback
		border 0
		background none
		text-align center
		color darken(#ccc,20)
		font-size 12px
		padding 0px
		margin 0px

	.search
		margin-bottom 0px
		padding 15px 0px 10px 0px
		border-bottom 1px solid #e5e5e5
		background #f5f5f5
		i
			position absolute
			top 22px
			left 42px

		input
			display block
			width 300px
			margin 0 auto
			padding-left 20px
			background rgba(#fff, .90)
			line-height 18px
			height 18px
			border 1px solid #ccc
			
			&:focus
				border-color #606060


	ul.dynamo-results
		list-style-type none
		padding 0px
		margin 0px
		width 400px
		overflow hidden
		
		li
			margin 0px
			padding 5px 0px
			width 50%
			float left
			display inline
			text-align center
			text-transform capitalize
			font-weight bold
			color #666
			margin 2px 0px

			span
				display block
				border 1px solid #e5e5e5
				background #f5f5f5
				margin 0 10px
				padding 2px 0px

				&:hover
					cursor: pointer


	.actions
		padding 0px
		margin 0px
		height 20px
		border-top 1px solid #e5e5e5
		background #f5f5f5
		clear both

		a
			float right
			line-height 20px
			padding 0px 3px
			i
				margin-top 1px